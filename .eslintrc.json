{
  "extends": "eslint:recommended",
  "env": {
      "node": true,
      "browser": true,
      "es6": true,
      "jasmine": true
  },
  "globals": {
      "atom": true,
      "waitsForPromise": true
  },
  "parserOptions": {
      "sourceType": "module"
  },
  "rules": {
    "space-before-function-paren": ["error", {
        "anonymous": "always",
        "named": "never"
    }],
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "never"
    ],
    "keyword-spacing": ["error", {
      "before": true,
      "after": true
    }],
    "space-before-blocks": ["error", "always"]
  }
}
